<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.yasaad.humtrivia.UI.HomeScreen">

    <ImageButton
        android:id="@+id/myTunes"
        android:layout_width="100dp"
        android:layout_height="84dp"
        android:background="@android:color/black"
        android:contentDescription="myTunes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size"/>

    <ImageButton
        android:id="@+id/gameStart"
        android:layout_width="100dp"
        android:layout_height="84dp"
        android:background="@android:color/black"
        android:contentDescription="gameStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_input_add"/>

    <ImageButton
        android:id="@+id/recordingButton"
        android:layout_width="187dp"
        android:layout_height="84dp"
        android:background="@android:color/black"
        android:contentDescription="Record"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gameStart"
        app:layout_constraintStart_toEndOf="@+id/myTunes"
        app:srcCompat="@android:drawable/ic_btn_speak_now"/>

    <ImageButton
        android:id="@+id/delete"
        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
        android:layout_width="62dp"
        android:layout_height="64dp"
        android:background="@android:color/black"
        android:contentDescription="Delete Recording"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_delete"/>

    <ImageButton
        android:id="@+id/upload"
        android:layout_width="72dp"
        android:layout_height="65dp"
        android:background="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_send"/>

    <ProgressBar
        android:id="@+id/recordingInSession"
        style="?android:attr/progressBarStyle"
        android:layout_width="227dp"
        android:layout_height="223dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.243"/>

    <ImageButton
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.354"
        app:srcCompat="@android:drawable/ic_media_play"/>

    <ImageButton
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.354"
        app:srcCompat="@android:drawable/ic_media_pause"/>


</android.support.constraint.ConstraintLayout>
